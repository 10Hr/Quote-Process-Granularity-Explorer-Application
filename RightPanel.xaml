<UserControl x:Class="ZSExplorer.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto" MinWidth="400">
    <Border CornerRadius="6" BorderBrush="DarkGray" BorderThickness="1" Background="White" Padding="10" Margin="0,0,0,20">
        <StackPanel>
            <!-- Header Section -->
            <Grid Background="#FF2E86C1" Height="50" CornerRadius="6,6,0,0" Padding="10" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: contract symbol and option details -->
                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="ContractSymbolText" Text="AAPL220617C00145000" FontWeight="Bold" Foreground="White" FontSize="16"/>
                    <TextBlock x:Name="OptionDetailsText" Text="Underlying: AAPL | Exp: 2022-06-17 | Strike: 145.00" 
                               FontSize="12" Foreground="LightGray"/>
                </StackPanel>

                <!-- Right side: Status indicator + Remove button -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,0,0" >
                    <!-- Status Indicator: pulsing red/green dot -->
                    <Ellipse x:Name="StatusIndicator" Width="16" Height="16" Fill="Green" Margin="0,0,10,0"/>
                    <Button x:Name="RemoveButton" Content="Remove" Width="75" Height="30" />
                </StackPanel>
            </Grid>

            <!-- Control Body Layout: 2-column grid -->
            <Grid Margin="10" ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left column: Time window config & sample stats -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" >
                    <!-- Time Window Slider -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Time Window (days):" FontWeight="SemiBold" />
                        <Slider x:Name="TimeWindowSlider" Minimum="1" Maximum="365" Value="30" TickFrequency="1" 
                                IsSnapToTickEnabled="True" />
                        <TextBlock x:Name="TimeWindowValueText" Text="Selected: 30 days" />
                    </StackPanel>

                    <!-- Sample Statistics Grid -->
                    <UniformGrid Columns="3" Rows="1" Margin="0,10,0,0">
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Sample Size" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="SampleSizeText" Text="1500" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Mean Return" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="MeanReturnText" Text="0.03%" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Std Dev" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="StdDevText" Text="1.2%" FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>

                <!-- Right column: Distribution params & KS test results -->
                <StackPanel Grid.Column="1" >
                    <!-- Fitted Distribution Parameters -->
                    <UniformGrid Columns="2" Rows="2" Margin="0,0,0,10">
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Location Parameter" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="LocationParameterText" Text="0.01" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Scale Parameter" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="ScaleParameterText" Text="0.98" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Degrees of Freedom" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="DegreesFreedomText" Text="5" FontSize="14"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
                            <StackPanel>
                                <TextBlock Text="Convergence Iterations" FontWeight="Bold" FontSize="12" />
                                <TextBlock x:Name="ConvergenceIterationsText" Text="12" FontSize="14"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- KS Test Results Panel -->
                    <Border Background="#FFE6F0FA" Padding="10" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="KS Test Statistic" FontWeight="Bold" FontSize="18" />
                            <TextBlock x:Name="KSTestStatisticText" Text="0.045" FontWeight="Bold" FontSize="24" Foreground="#FF2E86C1" Margin="0,0,0,5"/>
                            <TextBlock x:Name="KSDecisionText" Text="Decision: Accept Null Hypothesis" FontWeight="Bold" FontSize="16" Foreground="Green" />
                            <TextBlock x:Name="PValueCriticalValueText" Text="P-value: 0.95 | Critical Value: 0.05" FontSize="12" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Full width: ECDF Plot placeholder -->
            <Border Height="200" Margin="0,15,0,0" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4" Background="#FFF9F9F9" >
                <TextBlock Text="ECDF Plot Area" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic" />
            </Border>

            <!-- Convergence Information Grid -->
            <UniformGrid Columns="4" Margin="0,15,0,0" ColumnSpacing="10">
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Iterations" FontWeight="Bold" FontSize="12"/>
                        <TextBlock x:Name="ConvergenceIterationsBottomText" Text="12" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Error Tolerance" FontWeight="Bold" FontSize="12"/>
                        <TextBlock x:Name="ErrorToleranceText" Text="0.0001" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Fit Quality" FontWeight="Bold" FontSize="12"/>
                        <TextBlock x:Name="FitQualityText" Text="Good" FontSize="14"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="2">
                    <StackPanel>
                        <TextBlock Text="Status" FontWeight="Bold" FontSize="12"/>
                        <TextBlock x:Name="StatusText" Text="Converged" FontSize="14"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Border>
</UserControl>
