                    <!-- Sample Statistics Grid -->
                    <TextBlock Text="Sample Statistics" FontWeight="Bold" Margin="0,0,0,6" />
                    <UniformGrid Columns="2" Rows="3" Margin="0,0,0,10">
                        <TextBlock Text="Sample Size:" />
                        <TextBlock x:Name="SampleSizeText" Text="-" />

                        <TextBlock Text="Mean Return:" />
                        <TextBlock x:Name="MeanReturnText" Text="-" />

                        <TextBlock Text="Standard Deviation:" />
                        <TextBlock x:Name="StdDevText" Text="-" />
                    </UniformGrid>
                </StackPanel>

                <!-- Right column: Fitted distribution & KS test -->
                <StackPanel Grid.Column="1" VerticalAlignment="Top">

                    <!-- Fitted Distribution Parameters -->
                    <TextBlock Text="Fitted Distribution Parameters" FontWeight="Bold" Margin="0,0,0,6" />
                    <UniformGrid Columns="2" Rows="4" Margin="0,0,0,10">
                        <TextBlock Text="Location Param:" />
                        <TextBlock x:Name="LocationParamText" Text="-" />

                        <TextBlock Text="Scale Param:" />
                        <TextBlock x:Name="ScaleParamText" Text="-" />

                        <TextBlock Text="Degrees of Freedom:" />
                        <TextBlock x:Name="DegreesFreedomText" Text="-" />

                        <TextBlock Text="Convergence Iterations:" />
                        <TextBlock x:Name="ConvergenceIterationsText" Text="-" />
                    </UniformGrid>

                    <!-- KS Test Results -->
                    <Border BorderBrush="{StaticResource SecondaryBrush}" BorderThickness="1" CornerRadius="6" Padding="8" Background="#FFF9F2D6" >
                        <StackPanel>
                            <TextBlock Text="KS Test Results" FontWeight="Bold" Margin="0,0,0,6" />

                            <TextBlock x:Name="KsTestStatText" Text="Test Statistic: -" FontSize="18" FontWeight="Bold" />
                            <TextBlock x:Name="StatDecisionText" Text="Decision: -" FontWeight="Bold" Margin="0,2,0,6" />
                            <TextBlock x:Name="PValueText" Text="P-value: -" FontSize="12" />
                            <TextBlock x:Name="CriticalValueText" Text="Critical value: -" FontSize="12" />
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>

            <!-- ECDF Plot Area -->
            <Border BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1" CornerRadius="6" Background="White" Height="180" Margin="0,0,0,10">
                <Canvas x:Name="EcdfPlotCanvas" />
            </Border>

            <!-- Convergence Info -->
            <UniformGrid Columns="4" Rows="1" HorizontalAlignment="Stretch" >
                <StackPanel>
                    <TextBlock Text="Iterations" FontWeight="Bold" />
                    <TextBlock x:Name="ConvIterationsText" Text="-" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Error Tolerance" FontWeight="Bold" />
                    <TextBlock x:Name="ErrorToleranceText" Text="-" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Fit Quality" FontWeight="Bold" />
                    <TextBlock x:Name="FitQualityText" Text="-" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Status" FontWeight="Bold" />
                    <TextBlock x:Name="FitStatusText" Text="-" />
                </StackPanel>
            </UniformGrid>

                    <Border Grid.Row="4" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="10">
                        <StackPanel VerticalAlignment="Top">
                        <Grid Grid.Column="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DataGrid x:Name="MarkDataGrid" 
                                AutoGenerateColumns="False" 
                                AutoGeneratingColumn="MarketDataGrid_AutoGeneratingColumn"
                                Grid.Row="1"
                                CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="datetime" Binding="{Binding DateTime, StringFormat=MM/dd/yyyy HH:mm:ss.ffffff}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="MMID" Binding="{Binding MMID}" IsReadOnly="True"/>
                                    <DataGridCheckBoxColumn Header="BidAsk" Binding="{Binding BidAsk}" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>

                        </Grid>
                        </StackPanel>
                    </Border>




        </StackPanel>
    </Border>
</UserControl>
