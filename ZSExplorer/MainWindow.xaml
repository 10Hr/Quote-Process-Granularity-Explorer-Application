<Window x:Class="ZSExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZSExplorer"
        mc:Ignorable="d"
        Title="ZSExplorer" Height="600" Width="1000">
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Open" Click="OpenMenuItem_Click"/>
                <Separator />
                <MenuItem Header="Exit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Tool Bar -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Load Feather" Click="LoadFeatherDataButton_Click"/>
                <Button Content="Refresh" Click="RefreshButton_Click" />
                <Button Content="Add KS Test" Click="AddKsTest_Click"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready" />
            </StatusBarItem>
        </StatusBar>

        <!-- Content Area -->
        <Grid DockPanel.Dock="Top" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Data Summary" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <ListBox x:Name="DataSummaryListBox" Height="200"/>
                <Button Content="Analyze" Margin="0,10,0,0"/>
                <!-- Add more left-side controls -->
            </StackPanel>

            <!-- Right Panel -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Metric:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="MetricComboBox" Width="200">
                        <ComboBoxItem Content="Mean"/>
                        <ComboBoxItem Content="Median"/>
                        <ComboBoxItem Content="Standard Deviation"/>
                    </ComboBox>
                    <Button Content="Run Analysis" Margin="10,0,0,0" Click="RunAnalysisButton_Click"/>
                </StackPanel>

                <!-- Existing Load Feather Button -->
                <Button Grid.Row="1"
                        Content="📂 Load Feather File"
                        Click="LoadFeatherDataButton_Click"
                        Width="200"
                        Height="60"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Background="#FF4CAF50"
                        Foreground="White"
                        BorderBrush="#FF388E3C"
                        BorderThickness="2"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF66BB6A" />
                                    <Setter Property="BorderBrush" Value="#FF2E7D32" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF388E3C" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Grid>
                    <DataGrid x:Name="MarketDataGrid" AutoGenerateColumns="True" />
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
